
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import edu.cnm.deepdive.ca.rps.views.TerrainView?>


<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.cnm.deepdive.ca.rps.controllers.Controller"
          alignment="CENTER"
          hgap="10"
          vgap="10">

  <padding>
    <Insets top="50" bottom="100" left="20" right="20"/>
  </padding>

  <columnConstraints>
    <ColumnConstraints
      percentWidth="33.33" />
    <ColumnConstraints
      percentWidth="33.33" />
    <ColumnConstraints
      percentWidth="33.33" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints
      minHeight="600"
      maxHeight="600"/>
  </rowConstraints>
<TerrainView
  fx:id="terrainView"
  GridPane.rowIndex="0"
  GridPane.columnIndex="0"
  height="600"
  width= "600"/>
<Label
  text="%speedSliderText"
  labelFor="$speedSlider"
  GridPane.rowIndex="1"
  GridPane.columnIndex="0"
  GridPane.halignment="LEFT"
  GridPane.valignment="TOP"/>


  <Slider fx:id="speedSlider"
          min="0.1"
          max="1"
          majorTickUnit="0.1"
          minorTickCount="0"
          snapToTicks="true"
          showTickMarks="true"
          showTickLabels="true"
          blockIncrement="0.1"
          value="0.5"
          GridPane.rowIndex="1"
          GridPane.halignment="RIGHT"
          GridPane.valignment="CENTER"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          maxWidth="320"/>


  <ChoiceBox fx:id="neighborhoodChoice"
             GridPane.columnIndex="2"
             GridPane.rowIndex="1"
             onAction="#changeNeigborhood"
             GridPane.halignment="RIGHT"/>


  <Button fx:id="runButton"
          text="%runButtonText"
          GridPane.rowIndex="2"
          GridPane.columnIndex="0"
          onAction="#runModel"
          GridPane.halignment="CENTER"
          GridPane.Valignment="BOTTOM"
          prefWidth="150"
          prefHeight="50"/>

  <Button fx:id="stopButton"
          text="%stopButtonText"
          GridPane.rowIndex="2"
          GridPane.columnIndex="1"
          disable="true"
          onAction="#stopModel"
          GridPane.halignment="CENTER"
          GridPane.Valignment="BOTTOM"
          prefWidth="150"
          prefHeight="50"/>

  <Button fx:id="resetButton"
          text="%resetButtonText"
          GridPane.rowIndex="2"
          GridPane.columnIndex="2"
          onAction="#resetModel"
          GridPane.halignment="CENTER"
          GridPane.Valignment="BOTTOM"
          prefWidth="150"
          prefHeight="50"/>

</GridPane>